{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Vestra-ERP",
  "version": "0.1.0",
  "identifier": "br.app.vestra",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Vestra Management",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5MjBEQzYyRUQ2RTBGREYKUldUZkQyN3RZdHdnV2ZOdlk2SVZKc2hLTmdhYVBScXk0WDVYaUwyd05QWTFuZUFtMzArTGR5bTYK",
      "endpoints": [
        "https://vestra.app.br/api/tauri-update/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": { "installMode": "passive" }
    }
  }
}
